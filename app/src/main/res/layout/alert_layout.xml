<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	      android:orientation="horizontal"
	      android:layout_width="wrap_content"
	      android:layout_height="wrap_content"
	      android:padding="10dp"
	      >

	<ImageView
		android:layout_width="50dp"
		android:layout_height="50dp"
		android:id="@+id/alerticon_iv"
		android:src="@drawable/icon"/>

	<TextView
		android:layout_marginTop="2dp"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="手机寻回"
		android:textColor="#000000"
		android:layout_marginLeft="10dp"
		android:textSize="16dp"
		android:layout_alignTop="@id/alerticon_iv"
		android:id="@+id/alerttitle_tv"
		android:layout_toRightOf="@id/alerticon_iv"
		/>

	<TextView
		android:layout_marginBottom="2dp"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="请点击取消关闭铃声"
		android:layout_marginLeft="10dp"
		android:textColor="#636363"
		android:textSize="13dp"
		android:layout_toRightOf="@id/alerticon_iv"
		android:layout_alignBottom="@id/alerticon_iv"/>

	<TextView
		android:layout_marginRight="10dp"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:text="取消"
		android:paddingLeft="20dp"
		android:paddingTop="5dp"
		android:paddingBottom="5dp"
		android:textColor="#636363"
		android:id="@+id/alertcancel_tv"
		android:textSize="16dp"
		android:layout_alignParentRight="true"
		android:layout_centerVertical="true"
		/>

</RelativeLayout>